<Window x:Class="RummiKub.ExitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RummiKub"
        mc:Ignorable="d"
        Title="ExitWindow" Height="200" Width="150">
    <StackPanel>
        
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="44" Margin="24,25,0,0" TextWrapping="Wrap" Text="Are you sure you want to get out?" VerticalAlignment="Top" Width="100"/>

        <StackPanel Orientation="Horizontal"  >
            <Button x:Name="Yes_Button" Content="yes" HorizontalAlignment="Left" Height="24" Margin="17,30,0,0" VerticalAlignment="Top" Width="34" Click="Yes_Button_Click" />
            <Button x:Name="No_Button" Content="no" HorizontalAlignment="Left" Height="24" Margin="40,30,0,0" VerticalAlignment="Top" Width="34" Click="No_Button_Click" />
        </StackPanel>

    </StackPanel>
</Window>
