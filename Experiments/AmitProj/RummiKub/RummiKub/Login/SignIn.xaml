<Window x:Class="RummiKub.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RummiKub"
        mc:Ignorable="d"
        Title="SignIn" Height="350" Width="525">

    <StackPanel>
            
        <!-- The first Line -->
        <StackPanel Orientation="Horizontal" Margin="100,50,100,10">
            <TextBlock TextWrapping="Wrap" Text="UserName:" Margin="0,0,10,0"/>
            <TextBox Name="txtBlockUserName" Height="23" TextWrapping="Wrap" Text="" Width="100"/>
        </StackPanel>
            
        <!-- The second Line -->
        <StackPanel Orientation="Horizontal" Margin="100,50,100,10">
            <TextBlock TextWrapping="Wrap" Text="Password:"  Margin="0,0,10,0"/>
            <PasswordBox Name="txtBlockPasswoed"  Width="100"/>
        </StackPanel>

        <!-- The sign in button -->
        <Button Content="sign In" Margin="100,40,100,10" Name="SignInButton" Click="SignInButton_Click" />

        <!-- The back button -->
        <Button Content="Back" HorizontalAlignment="Left" Height="27" Margin="302,0,0,0" Width="73" Name="BackSignIn" Click="BackSignIn_Click"/>

    </StackPanel>
        
</Window>
